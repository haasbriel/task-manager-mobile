<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTask">

    <!-- botão de adicionar nova tarefa !-->

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/buttonAddTask"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/buttonColor"
        android:gravity="center"
        android:text="Adicionar nova tarefa"
        android:textSize="12sp"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />


    <!--barra de rolagem dinamica do meio!-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="316dp"
        android:layout_height="465dp"
        android:gravity="center"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/cardBorder"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAddTask"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToNextTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- título dentro do Card -->
            <TextView
                android:id="@+id/textAddNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Adicionar nova tarefa"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAddNewTaskSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Preencha as informações sobre a nova tarefa."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/textInputTitleNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:text="Título*"
                android:textColor="@color/cardBorder"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titleInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:hintTextColor="@color/buttonColor"
                app:boxStrokeColor="@color/buttonColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/titleNewTaskInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex: Passear com o cachorro"
                    android:textColorHint="@color/buttonColor"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textInputDescriptionNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:text="Descrição"
                android:textColor="@color/cardBorder"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionNewTaskInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="Ex: Passear com o cachorro no condomínio."
                    android:minLines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textCheckboxCategoryNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:text="Categoria*"
                android:textColor="@color/cardBorder"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxPersonalCategory"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"
                    android:text="Pessoal"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxWorkCategory"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"
                    android:text="Trabalho"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxSocialCategory"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"
                    android:text="Social"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxStudyCategory"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"
                    android:text="Estudo"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSaveTask"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Salvar"
                    android:textSize="14sp"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancelTask"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Cancelar"
                    android:textSize="14sp"
                    android:backgroundTint="#F44336"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- botão de ir p proxima tarefa !-->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/buttonGoToNextTask"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/buttonColor"
        android:gravity="center"
        android:text="Próxima categoria"
        android:textSize="12sp"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

</androidx.constraintlayout.widget.ConstraintLayout>