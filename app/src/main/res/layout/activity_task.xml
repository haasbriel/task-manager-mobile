<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTask">

    <!-- botão de adicionar nova tarefa !-->

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/buttonAddTask"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/buttonColor"
        android:gravity="center"
        android:text="Adicionar nova tarefa"
        android:textSize="12sp"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />


    <!--barra de rolagem dinamica do meio!-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="316dp"
        android:layout_height="465dp"
        android:gravity="center"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/cardBorder"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAddTask"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToNextTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- título dentro do Card -->
            <TextView
                android:id="@+id/textCategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarefas"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- lista de tarefas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTasks"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:padding="4dp" />

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


    <!-- botão de ir p proxima tarefa !-->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/buttonGoToNextCategory"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/buttonColor"
        android:gravity="center"
        android:text="Próxima categoria"
        android:textSize="12sp"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

</androidx.constraintlayout.widget.ConstraintLayout>